{
	"extends": "@vue/tsconfig/tsconfig.json",
	"compilerOptions": {
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"lib": [
			"esnext",
			"dom"
		],
		"types": [
			"@dcloudio/types",
			"@types/uuid",
			"@uni-helper/uni-app-types",
			"@uni-helper/uni-ui-types",
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue"
	]
}
